@model CineplexMovieComplex.Models.CineplexMovie

@{
    ViewData["Title"] = "Movie Details";
}

<h2>Movie Details</h2>

<div>
    <h3>@Html.DisplayFor(model => model.Movie.Title)</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Poster
        </dt>
        <dd>
            <img src="@Url.Content(@Html.DisplayTextFor(model => model.Movie.ImageUrl))" style="display:block; max-height:500px; max-width:300px; height:auto; width:auto;" />
            <br />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Movie.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Cineplex.Location)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Cineplex.Location)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.ViewingTime)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.ViewingTime)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Day)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Day)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.SeatsAvailable)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.SeatsAvailable) / 20
        </dd>
    </dl>
</div>
